    <div class="">
        <a href="/">
            <img src="~/static/logoSmall.png" style="max-width: 150px; max-height: 150px;" />
        </a>
    </div>

    <div class="d-flex">
        <div class="ps-4 pt-1 flex-fill">
            <a href="#" class="d-block pt-1 text-primary">Employer</a>
