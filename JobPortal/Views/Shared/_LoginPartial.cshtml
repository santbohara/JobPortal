@using Microsoft.AspNetCore.Identity
@inject SignInManager<AdminUser> SignInManager
@inject UserManager<AdminUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link text-dark" href="/">Hello @User.Identity?.Name!</a>
    <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Dashboard", new { area = "" })">
        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>
}