@model JobPortal.Areas.Users.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActiveNav"] = "Users";
}

<div>
    <a asp-action="Index" class="nav-link pb-3 px-0"><i class="bi bi-arrow-left-short"></i> Back</a>
</div>

<div class="col-md-4">

    <partial name="_Alert" />

    <div class="card shadow-none">

        <div class="card-body">

            <form asp-action="ChangePassword" method="post" autocomplete="off">
                <input asp-for="@Model.Id" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label" aria-required="true"></label>
                    <input asp-for="@Model.Email" class="form-control" readonly />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="@Model.FirstName" class="form-label" aria-required="true"></label>
                        <input asp-for="@Model.FirstName" class="form-control" readonly />
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="@Model.LastName" class="form-label" aria-required="true"></label>
                        <input asp-for="@Model.LastName" class="form-control" readonly />
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Password" class="form-label"></label>
                    <input asp-for="@Model.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Change Password</button>
            </form>
        </div>
    </div>
</div>